        <if test="entity.deviceClassification != null and entity.deviceClassification != ''">
            AND a.device_classification = #{entity.deviceClassification}
        </if>
        <if test="entity.departId != null and entity.departId != ''">
            AND a.depart_id = #{entity.departId}
        </if>
        <if test="entity.departParentId != null and entity.departParentId != ''">
            AND a.depart_parent_id = #{entity.departParentId}
        </if>
        <if test='entity.hisChargeCodeSynFlag != null and entity.hisChargeCodeSynFlag == "1"'>
            AND (a.charge_code is not null and a.charge_code &lt;&gt; '')
        </if>
        <if test='entity.hisChargeCodeSynFlag != null and entity.hisChargeCodeSynFlag == "2"'>
            AND (a.charge_code is null or a.charge_code = '')
        </if>
        ORDER BY a.update_time desc,a.create_time desc
    </select>

    <!-- 用于产品弹出框 -->
    <select id="chooseProductList" resultType="org.jeecg.modules.pd.vo.PdProductPage" parameterType="org.jeecg.modules.pd.vo.PdProductPage">
        select DISTINCT
            a.id as productId,
            a.number as productNumber,
            a.name as productName,
            a.*,
        case
        when a.product_flag = '0' then "耗材"
        when a.product_flag = '1' then "试剂"
        end as "productFlagName",
            b.name as unitName,
            bb.name as specUnitName,
            c.name as venderName,
            d.name as supplierName
        <if test="entity.stockDepartId != null and entity.stockDepartId != ''">
           , IFNULL(f.stock_num,0) as stockNum
        </if>
        <if test="entity.mergeOrderNo != null and entity.mergeOrderNo != ''">
            ,e.merge_order_no as mergeOrderNo
        </if>
        from pd_product a
        left join pd_unit b on a.unit_id = b.id
        left join pd_unit bb on a.spec_unit_id = bb.id
        left join pd_vender c on a.vender_id = c.id
        left join pd_supplier d on a.supplier_id = d.id
        <if test="entity.stockDepartId != null and entity.stockDepartId != ''">
        left join pd_product_stock_total f on f.product_id = a.id and f.depart_id=#{entity.stockDepartId}
        </if>
        <if test="entity.mergeOrderNo != null and entity.mergeOrderNo != ''">
        left join pd_purchase_order_merge_detail e on e.product_id = a.id
        </if>
        <where>
            a.del_flag = #{entity.DEL_FLAG_NORMAL}
            <if test="entity.name != null and entity.name != ''">
                AND (
                    a.number LIKE concat('%',#{entity.name},'%')
                    or a.name LIKE concat('%',#{entity.name},'%')
                    or a.py LIKE concat('%',#{entity.name},'%')
                    or a.wb LIKE concat('%',#{entity.name},'%')
                    or a.bname LIKE concat('%',#{entity.name},'%')
                    or a.bpy LIKE concat('%',#{entity.name},'%')
                    or a.bwb LIKE concat('%',#{entity.name},'%')
                    or a.zdy LIKE concat('%',#{entity.name},'%')
                )
            </if>
            <if test="entity.id != null and entity.id != ''">
                AND a.id = #{entity.id}
            </if>
            <if test="entity.number != null and entity.number != ''">
                AND a.number LIKE concat('%',#{entity.number},'%')
            </if>
            <if test="entity.registration != null and entity.registration != ''">
                AND a.registration LIKE concat('%',#{entity.registration},'%')
            </if>
            <if test="entity.chargeCode != null and entity.chargeCode != ''">
                AND a.charge_code LIKE concat('%',#{entity.chargeCode},'%')
            </if>
            <if test="entity.spec != null and entity.spec != ''">
                AND a.spec LIKE concat('%',#{entity.spec},'%')
            </if>
            <if test="entity.supplierId != null and entity.supplierId != ''">
                AND a.supplier_id = #{entity.supplierId}
            </if>
            <if test="entity.venderId != null and entity.venderId != ''">
                AND a.vender_id = #{entity.venderId}
            </if>
            <if test="entity.mergeOrderNo != null and entity.mergeOrderNo != ''">
                AND e.merge_order_no = #{entity.mergeOrderNo}
            </if>
            <if test="entity.productFlag != null and entity.productFlag != ''">
                AND a.product_flag = #{entity.productFlag}
            </if>
            <if test="entity.deviceClassification != null and entity.deviceClassification != ''">
                AND a.device_classification = #{entity.deviceClassification}
            </if>
            <if test="entity.departParentId != null and entity.departParentId != ''">
                AND a.depart_parent_id = #{entity.departParentId}
            </if>
        </where>
        ORDER BY a.update_time desc,a.create_time desc
    </select>

    <!-- 批量更新产品收费代码 -->
    <update id="updateChargeCode">
		UPDATE pd_product SET
			charge_code = #{chargeCode}
		WHERE id = #{id}
	</update>

    <!-- 校验产品编号是否唯一 -->
    <select id="verify" resultType="org.jeecg.modules.pd.entity.PdProduct">
        SELECT
        <include refid="pdProductPartColumns"/>
        FROM pd_product a
        <where>
            a.del_flag = #{DEL_FLAG_NORMAL}
            and a.number = #{number}
            <if test="id != null and id != ''">
                AND a.id != #{id}
            </if>
            <if test="departParentId != null and departParentId != ''">
                AND a.depart_parent_id = #{departParentId}
            </if>
        </where>
    </select>


    <!-- 产品删除校验 -->
    <select id="selectListByCT" resultType="org.jeecg.modules.pd.entity.PdProduct" parameterType="org.jeecg.modules.pd.entity.PdProduct">
        SELECT
        <include refid="pdProductColumns"/>
        FROM pd_product a
        <where>
            a.del_flag = #{DEL_FLAG_NORMAL}
        </where>
        <if test="categoryTwo != null and categoryTwo != ''">
            and (
            a.category_one = #{categoryTwo}
            OR a.category_two = #{categoryTwo}
            )
        </if>
        <if test="groupId != null and groupId != ''">
           and a.group_id = #{groupId}
        </if>
        <if test="supplierId != null and supplierId != ''">
            and a.supplier_id = #{supplierId}
        </if>
        <if test="venderId != null and venderId != ''">
            and a.vender_id = #{venderId}
        </if>
        <if test="unitId != null and unitId != ''">
            and a.unit_id = #{unitId}
        </if>
        <if test="departId != null and departId != ''">
            AND a.depart_id = #{departId}
        </if>
        <if test="departParentId != null and departParentId != ''">
            AND a.depart_parent_id = #{departParentId}
        </if>
        order by a.create_time desc, a.update_time desc
    </select>

    <!-- 产品分类删除校验 -->
    <select id="selectListByCTs" resultType="org.jeecg.modules.pd.entity.PdCategory">
        select
        *
        from pd_product a
        <where>
            a.del_flag = #{parMap.DEL_FLAG_NORMAL}
        </where>
        <if test="parMap.ids != null and parMap.ids != ''">
           and (
            a.category_one in  ( ${parMap.ids} )
            OR a.category_two in  ( ${parMap.ids} )
            )
        </if>
        <if test="parMap.departParentId != null and parMap.departParentId != ''">
            and a.depart_parent_id = #{parMap.departParentId}
        </if>
    </select>

    <!-- 根据收费代码查询产品，精确查询 -->
