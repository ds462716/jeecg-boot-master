    <sql id="pdProductJoins">
    </sql>

    <!-- 单位 -->
    <sql id="pdUnitColumns">
        b.`name` AS "unitName",
        sb.`name` AS "specUnitName"
    </sql>
    <sql id="pdUnitJoins">
        LEFT JOIN pd_unit b ON a.unit_id = b.id
        LEFT JOIN pd_unit sb ON a.spec_unit_id = sb.id
    </sql>

    <!-- 分类 -->
    <sql id="pdCategoryColumns">
       c.`name` AS "categoryOneName",
	   d.`name` AS "categoryTwoName"
    </sql>
    <sql id="pdCategoryJoins">
      left join pd_category c on a.category_one = c.id
      left join pd_category d on a.category_two = d.id
    </sql>

    <!-- 供应商 -->
    <sql id="pdSupplierColumns">
      e.`name` AS "supplierName"
    </sql>
    <sql id="pdSupplierJoins">
      left join pd_supplier e on a.supplier_id = e.id
    </sql>

    <!-- 生产厂家 -->
    <sql id="pdVenderColumns">
      f.`name` AS "venderName"
    </sql>
    <sql id="pdVenderJoins">
      left join pd_vender f on a.vender_id = f.id
    </sql>

    <!-- 组别 -->
    <sql id="pdGroupColumns">
      g.`name` AS "groupName"
    </sql>
    <sql id="pdGroupJoins">
      left join pd_group g on a.group_id = g.id
    </sql>

    <!-- 编码规则 -->
    <sql id="pdRuleColumns">
      h.id,
      h.product_id,
      h.rule_id
    </sql>
    <sql id="pdRuleJoins">
      LEFT JOIN (select * from pd_product_rule where del_flag = '0') h ON a.id = h.product_id
    </sql>

    <sql id="pdHisChargeInfColumns">
      i.fsf_xmmc as "fsfXmmc",
      i.fsf_je as "fsfJe",
      a.selling_price - i.fsf_je as "priceDifference"
    </sql>
    <sql id="pdHisChargeInfJoins">
      LEFT JOIN (select * from ex_his_charge_inf ex_inf where ex_inf.depart_parent_id = #{entity.departParentId}) i ON a.charge_code = i.fsf_xmbh
    </sql>

    <!-- 产品条件查询 -->
    <select id="selectList" resultMap="resultMap" parameterType="org.jeecg.modules.pd.entity.PdProduct">
        SELECT
        <include refid="pdProductColumns"/>,
        <include refid="pdUnitColumns"/>,
        <include refid="pdCategoryColumns"/>,
        <include refid="pdSupplierColumns"/>,
        <include refid="pdVenderColumns"/>,
        <include refid="pdGroupColumns"/>,
        <include refid="pdRuleColumns"/>
        FROM pd_product a
        <include refid="pdUnitJoins"/>
        <include refid="pdCategoryJoins"/>
        <include refid="pdSupplierJoins"/>
        <include refid="pdVenderJoins"/>
        <include refid="pdGroupJoins"/>
        <include refid="pdRuleJoins"/>
        <where>
            a.del_flag = #{entity.DEL_FLAG_NORMAL}
        </where>
        <if test="name != null and name != ''">
            AND (a.name LIKE concat('%',#{entity.name},'%')
            or a.py LIKE concat('%',#{entity.name},'%')
            or a.wb LIKE concat('%',#{entity.name},'%')
            or a.zdy LIKE concat('%',#{entity.name},'%')
            or a.bname LIKE concat('%',#{entity.name},'%')
            or a.bpy LIKE concat('%',#{entity.name},'%')
            or a.bwb LIKE concat('%',#{entity.name},'%')
            )
        </if>
        <if test="number != null and number != ''">
            AND a.number LIKE concat('%',#{entity.number},'%')
        </if>
        <if test="registration != null and registration != ''">
            AND a.registration LIKE concat('%',#{entity.registration},'%')
        </if>
        <if test="chargeCode != null and chargeCode != ''">
            AND a.charge_code LIKE concat('%',#{entity.chargeCode},'%')
        </if>
        <if test="venderId != null and venderId != ''">
            AND a.vender_id = #{entity.venderId}
        </if>
        <if test="supplierId != null and supplierId != ''">
            AND a.supplier_id = #{entity.supplierId}
        </if>
        <if test="spec != null and spec != ''">
            AND a.spec LIKE concat('%',#{entity.spec},'%')
        </if>
        <if test="version != null and version != ''">
            AND a.version LIKE concat('%',#{entity.version},'%')
        </if>
        <if test="validityFlag != null and validityFlag != ''">
            AND a.validity_flag = #{entity.validityFlag}
        </if>
        <if test="productFlag != null and productFlag != ''">
            AND a.product_flag = #{entity.productFlag}
        </if>
        <if test="deviceClassification != null and deviceClassification != ''">
            AND a.device_classification = #{entity.deviceClassification}
        </if>
        <if test="departId != null and departId != ''">
            AND a.depart_id = #{entity.departId}
        </if>
        <if test="departParentId != null and departParentId != ''">
            AND a.depart_parent_id = #{entity.departParentId}
        </if>
        ORDER BY a.update_time desc,a.create_time desc
    </select>
